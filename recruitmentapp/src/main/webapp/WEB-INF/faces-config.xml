<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <navigation-rule>
        <from-view-id>/resources/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{web.save()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{web.save()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/resources/register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{login.logedCheck()}</from-action>
            <from-outcome>applicant</from-outcome>
            <to-view-id>/resources/applicants/welcome.xhtml</to-view-id>
        </navigation-case>        
        <navigation-case>
            <from-action>#{login.logedCheck()}</from-action>
            <from-outcome>recruit</from-outcome>
            <to-view-id>/resources/recruits/welcome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.auth()}</from-action>
            <from-outcome>applicant</from-outcome>
            <to-view-id>/resources/applicants/welcome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.auth()}</from-action>
            <from-outcome>recruit</from-outcome>
            <to-view-id>/resources/recruits/welcome.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{login.auth()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/resources/applicants/*</from-view-id>
        <navigation-case>
            <from-action>#{appWeb.checkUser()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>resources/forbidden.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/resources/recruits/*</from-view-id>
        <navigation-case>
            <from-action>#{recWeb.checkUser()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>resources/forbidden.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>